swagger: "2.0"
info:
  description: "A simple REST API for providing basic CRUD-access to the employees in a Northwind database."
  version: "1.0.0"
  title: "Northwind"
schemes:
- "http"
paths:
  /employees:
    get:
      summary: "Get all employees"
      operationId: "getAllEmployees"
      responses:
        200:
          description: "successful operation"
          schema:
            type: array
            items:
              $ref: "#/definitions/Employee"
    post:
      summary: "Add a new employee"
      operationId: "addEmployee"
      parameters:
      - name: "body"
        in: "body"
        description: "Employee object representing the employee to add"
        required: true
        schema:
          $ref: "#/definitions/EmployeeSansID"
      responses:
        200:
          description: "successful operation"
          schema:
            type: "integer"
            format: "int32"
  /employees/{employeeId}:
    get:
      summary: "Find employee by ID"
      operationId: "getEmployeeByID"
      parameters:
      - name: "employeeId"
        in: "path"
        required: true
        type: "integer"
        format: "int32"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Employee"
    put:
      summary: "Updates an employee"
      operationId: "updateEmployee"
      parameters:
      - name: "employeeId"
        in: "path"
        required: true
        type: "integer"
        format: "int32"
      - name: "body"
        in: "body"
        description: "Employee object representing the employee to add"
        required: true
        schema:
          $ref: "#/definitions/EmployeeSansID"
      responses:
        200:
          description: "successful operation"
    delete:
      summary: "Deletes an employee"
      operationId: "deleteEmployee"
      parameters:
      - name: "employeeId"
        in: "path"
        required: true
        type: "integer"
        format: "int32"
      responses:
        200:
          description: "successful operation"
definitions:
  Employee:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int32"
      lastName:
        type: "string"
      firstName:
        type: "string"
      title:
        type: "string"
      birthDate:
        type: "string"
  EmployeeSansID:
    type: "object"
    properties:
      lastName:
        type: "string"
      firstName:
        type: "string"
      title:
        type: "string"
      birthDate:
        type: "string"
